<CommandBar
    x:Class="Money.Views.Controls.MainCommandBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Money.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400">
    <CommandBar.Content>
        <AppBarButton>
            <AppBarButton.Icon>
                <FontIcon Glyph="&#xE700;" />
            </AppBarButton.Icon>
            <AppBarButton.Flyout>
                <MenuFlyout LightDismissOverlayMode="On">
                    <MenuFlyoutItem Text="Pie chart" />
                    <MenuFlyoutItem Text="Summary" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Categories" />
                    <MenuFlyoutItem Text="Currencies" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Settings" />
                </MenuFlyout>
            </AppBarButton.Flyout>
        </AppBarButton>
    </CommandBar.Content>
</CommandBar>
