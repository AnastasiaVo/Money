<UserControl
    x:Class="Money.Views.Controls.Bar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Money.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400" 
    SizeChanged="OnSizeChanged" HorizontalAlignment="Stretch" Background="Red">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{x:Bind Value}" />
        <TextBlock Text=" / " />
        <TextBlock Text="{x:Bind Max}" />
        <TextBlock Text=" -- " />
        <TextBlock x:Name="tblWidth" />
    </StackPanel>
</UserControl>
