@using Money.Models.Sorting
@inherits SortButtonBase<TType>
@typeparam TType

<div class="sort dropdown">
    <button class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Sort
        <span class="caret"></span>
    </button>

    <div class="dropdown-menu dropdown-menu-right">
        @foreach (var item in Items)
        {
            <a class="dropdown-item" @onclick="@(() => OnItemClick(item.Value))">
                @item.Name

                @if (Current.Type.Equals(item.Value))
                {
                    <Icon Identifier="@DirectionToIcon(Current.Direction)" />
                }
            </a>
        }
    </div>
</div>