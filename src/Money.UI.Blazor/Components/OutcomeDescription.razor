@inherits ModalDialog

<Modal @ref="Modal" Title="Change a description of the outcome">
    <ChildContent>
        <Validation ErrorMessages="@ErrorMessages" />
        <div class="form-group">
            <label for="outcome-description">Description:</label>
            <input type="text" class="form-control" id="outcome-description" placeholder="Outcome Description" data-autofocus @bind="@Description" />
        </div>
    </ChildContent>
    <Buttons>
        <button class="btn btn-primary btn-sm" @onclick="@OnSaveClick">Save</button>
    </Buttons>
</Modal>
