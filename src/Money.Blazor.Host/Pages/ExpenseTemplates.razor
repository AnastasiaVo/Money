@page "/templates"
@attribute [Authorize]

<Money.Components.Title Icon="redo" Main="Expense Templates" Sub="List of templates for common expenses" ButtonText="New Template" ButtonClick="@(() => { Modal.Show(); StateHasChanged(); })" />
<ExceptionPanel />

<ExpenseTemplateCreate @ref="Modal" />

@foreach (var model in Models)
{
    <div class="card">
        <div class="card-body">
            @if (model.Amount != null)
            {
                <h3 class="m-0">
                    @CurrencyFormatter.Format(model.Amount)
                </h3>
            }

            @if (!model.CategoryKey.IsEmpty)
            {
                <p class="m-0 @FindCategoryColor(model.CategoryKey)?.SelectAccent("back-dark", "back-light")">
                    <span class="badge" style="background-color: @FindCategoryColor(model.CategoryKey)?.ToHashCode()">@FindCategoryName(model.CategoryKey)</span>
                </p>
            }

            @if (!String.IsNullOrEmpty(model.Description))
            {
                <p>
                    @model.Description
                </p>
            }
        </div>
    </div>
}